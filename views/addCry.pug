doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
  title chatApp
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  //if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

  style.
    body {
    background: #eee !important;
    }
    .wrapper {
    margin-top: 80px;
    margin-bottom: 80px;
    }
    .form-signin {
    max-width: 380px;
    padding: 15px 35px;
    margin: 0 auto;
    background-color: #fff;
    border: 1px solid rgba(0,0,0,0.1);
    }
nav.navbar.navbar-expand-lg.navbar-light.bg-light
  a.navbar-brand(href='#')
    img(src='/img/xknot.png' width='30' height='30' alt='')
    |  Celt-X Crying
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav
      li.nav-item
        a.nav-link(href='/')
          | Home 
      li.nav-item.active
        a.nav-link(href='/addcry') Add Cry
          span.sr-only (current)
      li.nav-item
        a.nav-link(href='/crycount') Cry Count
      li.nav-item
        a.nav-link(href='/logout') Log Out
.wrapper
  form.form-signin(action='/addCry' method='post')
    h2
      center Add Cry
    .form-group
      label#cryNumberLabel.form-label(for='cryNumber') Cry Range
      input#cryNumber.form-range(type='range' min='0' max='5' name='cryNumber')
    .form-group
      button.btn.btn-primary.btn-block(type='submit') Add
    p.text-center
      a(href='/') Home
script(src='https://code.jquery.com/jquery-3.3.1.min.js' integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=' crossorigin='anonymous')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy' crossorigin='anonymous')
script(type='text/javascript').
   $(document).ready( function () {
        $("#cryNumber").on('input', function(){
            $("#cryNumberLabel").text("Cry Range: " + $("#cryNumber").val())
        });

   });
